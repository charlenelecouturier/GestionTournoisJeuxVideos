<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <constant name="struts.ui.theme" value="css_xhtml" />

    <!--<package name="user" extends="struts-default" namespace="/user">-->
    <package name="default" extends="struts-default">

        <action name="RegisterAction" class="com.action.RegisterAction" method="execute">
            <result name="SUCCESS">/success.jsp</result>
            <result name="input">/user/register.jsp</result>
        </action>

        <action name="LoginAction" class="com.action.LoginAction"  method="execute">
            <result name="SUCCESS">/index.jsp</result>
            <result name="input">/user/login.jsp</result>
        </action>

               <!--Action lors de la déconnexion-->
        <action name="LogoutAction" class="com.action.LogoutAction">
            <result name="SUCCESS" type="redirect">/user/login.jsp</result>
        </action>

        <action name="DeleteAction" class="com.action.DeleteAction" method="execute">
            <result name="SUCCESS">/success_delete.jsp</result>
            <result name="input">/WEB-INF/user/delete.jsp</result>
        </action>


      <!-- Action permettant d'afficher la liste des tournois -->
        <action name="tournoi_list"
                class="com.action.TournoiAction"
                method="execute">

          <interceptor-ref name="store">
            <param name="operationMode">RETRIEVE</param>
          </interceptor-ref>
            <interceptor-ref name="validation">
                <param name="excludeMethods">input,back,cancel,browse,execute</param>
            </interceptor-ref>
          <result name="success">/user/listeTournoi.jsp</result>
            <result name="input">/user/listeTournoi.jsp</result>

            <result name="error">/erreur.jsp</result>
        </action>

        <!-- Action permettant de créer un nouveau tournoi -->
        <action name="creer_Tournoi"
                class="com.action.TournoiAction"
                method="enregistrerTournoi">

          <interceptor-ref name="store">
            <param name="operationMode">STORE</param>
          </interceptor-ref>
          <interceptor-ref name="defaultStack" />

          <result name="input">/administrateur/creerTournoi.jsp</result>
          <result name="success">/success.jsp</result>
          <result name="error">/erreur.jsp</result>
        </action>
        
        <action name="RechercheAction" class="com.action.RechercheAction" method="execute">
            <result name="input">index.jsp</result>
            <result name="success">/user/listeTournoi.jsp</result>
            <result name="error">/erreur.jsp</result>
        </action>
<action name="NewTournoiAction" class="com.action.NewTournoiFormAction" method="execute">
    <result name="success">/WEB-INF/administrateur/creerTournoi.jsp</result>
        <result name="error">/erreur.jsp</result>
</action>
        <action name="NewDeleteAction" class="com.action.NewDeleteFormAction" method="execute">
            <result name="success">/WEB-INF/user/delete.jsp</result>
            <result name="error">/erreur.jsp</result>
        </action>
    </package>

</struts>
